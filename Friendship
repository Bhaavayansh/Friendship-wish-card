<body>

  <div class="card">
    <div class="emoji">🎂🎊💛😀</div>
    <h1>Happy Friendship Day!</h1>

    <div class="input-section">
      <input type="text" id="friendInput" placeholder="Enter your friend's name" />
      <br>
      <button onclick="revealCard()">Show Message</button>
    </div>

    <div class="message-box" id="messageBox">
      <div class="friend-name" id="friendNameText"></div>
      <div class="message" id="friendMessage"></div>
    </div>
  </div>

  <div class="fireworks" id="fireworks"></div>

  <script>
    const messages = [
      "You're the rainbow in my stormy sky! 🌈",
      "Friends like you are rare and precious! 💎",
      "You light up my darkest days! 🔥",
      "Thanks for always being weird with me! 😂",
      "Life's better with you by my side! 🫂",
      "You're the peanut butter to my jelly! 🥪",
      "You're not just a friend… you're home. 🏡",
      "Even silence feels comforting with you. 🤍",
      "With you, even boring moments become memories! 📸",
      "You're a real one in a world full of filters. 📷"
    ];

    function revealCard() {
      const nameInput = document.getElementById('friendInput').value.trim();
      const friendName = nameInput ? nameInput : "My Friend";
      const randomMessage = messages[Math.floor(Math.random() * messages.length)];

      document.getElementById('friendNameText').innerText = `For my best friend, ${friendName}`;
      document.getElementById('friendMessage').innerText = randomMessage;
      document.getElementById('messageBox').classList.add('visible');

      launchFireworks();
    }

    function launchFireworks() {
      const container = document.getElementById('fireworks');
      for (let i = 0; i < 20; i++) {
        const fw = document.createElement('div');
        fw.className = 'firework';
        fw.style.top = Math.random() * window.innerHeight + 'px';
        fw.style.left = Math.random() * window.innerWidth + 'px';
        fw.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
        container.appendChild(fw);
        setTimeout(() => fw.remove(), 1000);
      }
    }
  </script>

</body>
</html>
